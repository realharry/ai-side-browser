{
  "manifest_version": 3,
  "name": "AI Side Browser",
  "version": "1.0.0",
  "description": "A Chrome extension with side panel browser for accessing AI services while browsing",
  "permissions": [
    "sidePanel",
    "storage",
    "activeTab",
    "declarativeNetRequest"
  ],
  "host_permissions": [
    "*://*/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "options_page": "options.html",
  "action": {
    "default_popup": "",
    "default_title": "Open AI Side Browser"
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "declarative_net_request": {
    "rule_resources": [
      {
        "id": "ruleset_1",
        "enabled": true,
        "path": "rules.json"
      }
    ]
  }
}